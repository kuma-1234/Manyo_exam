<h1>タスクの一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>タスク名</th>
    <th>終了期限</th>
    <th><p></p></th>
  </tr>

  <div class="task_table">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_title %></td>
        <td><%= task.deadline %></td>
        <td>
          <%= link_to '詳細', task_path(task) %>
          <%= link_to '編集', edit_task_path(task) %>
          <%= link_to '削除', task_path(task), method: :delete, data:{confirm: "本当に削除して良いですか？"} %>
        </td>
      </tr>
    <% end %>
  </div>
</table>


<p><%= link_to 'タスクの新規投稿', new_task_path %></p>

<p><%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %></p>